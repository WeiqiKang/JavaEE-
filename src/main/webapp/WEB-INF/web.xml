<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <servlet>
        <servlet-name>exit</servlet-name>
        <servlet-class>com.kang.Exit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exit</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DatabaseServlet</servlet-name>
        <servlet-class>com.kang.dao.DatabaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DatabaseServlet</servlet-name>
        <url-pattern>/db.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DatabaseLogin</servlet-name>
        <servlet-class>com.kang.dao.DatabaseLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DatabaseLogin</servlet-name>
        <url-pattern>/db.login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>com.kang.Error</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

</web-app>